<style>
  .modal-header, h4, .close {
      background-color: #5cb85c;
      color:white !important;
      text-align: center;
      font-size: 30px;
  }
  .modal-footer {
      background-color: #f9f9f9;
  }
</style>

<% if current_user.present? %>
  <li>
    <img src="<%= current_user.image_path%>" class="img-circle" alt="Cinque Terre" width="30" height="30">
    <%= current_user.name %>
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
  </li>
  <div id="messages">
    <%= render @messages%>
  </div>

  <form>
    <label>Say somethings</label>
    <input type="text" data-behavior="room_speaker" />
  </form>

<% else %>
  <div class="container">
    <h2>Chat Room</h2>
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-default btn-lg" id="myBtn">Login</button>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4>Chat Room</h4>
          </div>
          <div class="modal-body" style="padding:40px 50px;">
            <form role="form">
              <a href='/auth/facebook' class="btn btn-block btn-social btn-facebook">
                <span class="fa fa-facebook"></span> Connect with Facebook
              </a>
              <a href='/auth/google_oauth2' class="btn btn-block btn-social btn-google">
                <span class="fa fa-google"></span> Connect with Google
              </a>
            </form>
          </div>
        </div>
      </div>
    </div> 
  </div>
   
  <script>
    $(document).ready(function(){
        $("#myBtn").click(function(){
            $("#myModal").modal();
        });
    });
    </script>
<% end %>



